# FishIt Smart Contract Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# Network Configuration
# =============================================================================

# RPC URL for deployment and testing
# Mantle Testnet: https://rpc.testnet.mantle.xyz
# Mantle Mainnet: https://rpc.mantle.xyz
# Local: http://localhost:8545
RPC_URL=https://rpc.testnet.mantle.xyz

# Private key for deployment (NEVER commit this to git!)
# Format: 0x... (64 hex characters, no 0x prefix in actual key)
PRIVATE_KEY=your_private_key_here

# =============================================================================
# Deployed Contract Addresses (set after deployment)
# =============================================================================

# FishItStaking contract address
STAKING_ADDRESS=

# FishNFT contract address
NFT_ADDRESS=

# FishingGame contract address
GAME_ADDRESS=

# FishMarketplace contract address
MARKETPLACE_ADDRESS=

# =============================================================================
# Supra VRF Configuration (for Mantle testnet/mainnet)
# =============================================================================

# Supra Router address
# Mantle Testnet: Get from Supra documentation for Mantle testnet
# Mantle Mainnet: Get from Supra documentation for Mantle mainnet
# Documentation: https://supra.com/docs
# Note: Supra VRF is used instead of Chainlink VRF for Mantle Network compatibility
SUPRA_ROUTER=

# Supra VRF Number of Confirmations
# Number of block confirmations before callback is executed
# Recommended: 3 for testnet, 3-5 for mainnet
SUPRA_NUM_CONFIRMATIONS=3

# =============================================================================
# Admin & Treasury Addresses
# =============================================================================

# Admin address (should be multisig in production)
ADMIN_ADDRESS=

# Revenue recipient (treasury address)
REVENUE_RECIPIENT=

# =============================================================================
# Etherscan API Key (for verification)
# =============================================================================

# Mantle Explorer API key (if available)
ETHERSCAN_API_KEY=

# =============================================================================
# Testing Configuration
# =============================================================================

# Fork block number (for testing on forked network)
FORK_BLOCK_NUMBER=

# Fork RPC URL (for testing on forked network)
FORK_RPC_URL=
