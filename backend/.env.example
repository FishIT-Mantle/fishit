# FishIt Backend Environment Variables
# Copy this to .env and fill in your values

# ============================================================================
# BLOCKCHAIN CONFIGURATION
# ============================================================================

# Mantle RPC URL (use a reliable provider like Alchemy, Infura, or public RPC)
RPC_URL=https://rpc.mantle.xyz

# Smart Contract Addresses (from deployment)
FISH_NFT_ADDRESS=0x...
FISHING_GAME_ADDRESS=0x...

# Backend signer private key (wallet authorized to call setTokenURI)
# IMPORTANT: Keep this secret! Only share with secure deployment environment
BACKEND_SIGNER_PRIVATE_KEY=0x...

# Chain ID (Mantle mainnet: 5000, testnet: 5001)
CHAIN_ID=5000

# ============================================================================
# AI IMAGE GENERATION (Google Gemini)
# ============================================================================

# Google Gemini API Key (get from https://aistudio.google.com/apikey)
GEMINI_API_KEY=your_gemini_api_key_here

# Model to use for image generation
GEMINI_MODEL=gemini-2.5-flash-image

# ============================================================================
# IPFS STORAGE (Pinata)
# ============================================================================

# Pinata API credentials (get from https://app.pinata.cloud/)
PINATA_API_KEY=your_pinata_api_key_here
PINATA_SECRET_KEY=your_pinata_secret_key_here

# Optional: Pinata JWT (alternative to API key/secret)
# PINATA_JWT=your_pinata_jwt_here

# ============================================================================
# DATABASE (PostgreSQL)
# ============================================================================

# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://postgres:password@localhost:5432/fishit

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================

# Port for health check endpoint (optional)
PORT=3000

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Max retry attempts for failed mints
MAX_RETRY_ATTEMPTS=5

# Retry interval in minutes
RETRY_INTERVAL_MINUTES=5

# Enable debug mode (more verbose logging)
DEBUG=false

# ============================================================================
# OPTIONAL: ADVANCED SETTINGS
# ============================================================================

# Block confirmation count before processing events
BLOCK_CONFIRMATIONS=2

# Maximum concurrent image generations
MAX_CONCURRENT_GENERATIONS=3

# Gas limit for setTokenURI transactions
GAS_LIMIT=500000

# Gas price multiplier (1.0 = network suggested, 1.2 = 20% higher)
GAS_PRICE_MULTIPLIER=1.1